    private void buttonSairActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair ","Sair ",JOptionPane.YES_NO_OPTION)==0)this.dispose();
    }                                          

    private void buttonResultadoActionPerformed(java.awt.event.ActionEvent evt) {                                                
        Employee salario = new Employee();
        
        salario.setNome(textNome.getText());
        salario.setSobreNome(textSobreNome.getText());
        salario.setMesSalario(Double.parseDouble(textSalario.getText()));
        salario.aplicacaoSalarioAcresimo((Double)spinnerPorcentagem.getValue());
        
        JOptionPane.showMessageDialog(rootPane, "Nome : "+salario.getNome()+"\nSobre Nome : "+salario.getSobreNome()+
                "\nSalario Mensal : R$"+salario.getAplicacao()+"\n Salario Anual : R$"+salario.getAnualSalario());
    }                                               

