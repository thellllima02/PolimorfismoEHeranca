    private void buttonSairActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(JOptionPane.showConfirmDialog(rootPane, "Deseja sair ", "Sair",JOptionPane.YES_NO_OPTION)==0)this.dispose();
    }                                          

    private void buttonResultadoActionPerformed(java.awt.event.ActionEvent evt) {                                                
        Date dia = new Date();
        
        dia.setDia((Integer)spinnerDia.getValue());
        dia.setMes((Integer)spinnerMes.getValue());
        dia.setAno((Integer)spinnerAno.getValue());
        
        dia.displayDate();
    }                                               

