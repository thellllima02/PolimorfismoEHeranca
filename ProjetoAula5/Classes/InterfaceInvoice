    private void textNumeracaoActionPerformed(java.awt.event.ActionEvent evt) {                                              
       
    }                                             

    private void buttonResultadoActionPerformed(java.awt.event.ActionEvent evt) {                                                
        Invoice numero = new Invoice();
        numero.setNumero(textNumeracao.getText());
        numero.setDescricao(textDescricao.getText());
        numero.setQuantidade(Integer.parseInt(textQuantidade.getText()));
        numero.setPrecoPorItem(Double.parseDouble(textPrecoPorItem.getText()));
        
        JOptionPane.showMessageDialog(rootPane, "Numeração :"+numero.getNumero()+"\nDescrição :"+numero.getDescricao()+
                "\nQuantidade :"+numero.getQuantidade()+"\n Preço por item :"+numero.getPrecoPorItem()+"\nValor a pagar :"+
                numero.getInvoiceAmount());
    }                                               

    private void buttonSairActionPerformed(java.awt.event.ActionEvent evt) {                                           
           if(JOptionPane.showConfirmDialog(rootPane,"Deseja sair ?","Sair ", JOptionPane.YES_NO_OPTION)==0)this.dispose();
     
    }                                          

