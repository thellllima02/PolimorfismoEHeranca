    private void buttonSairActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(JOptionPane.showConfirmDialog(rootPane,"Deseja sair ?"," Exist ", JOptionPane.YES_NO_OPTION)==0)
            System.exit(0);
    }                                          

    private void buttonCalcularActionPerformed(java.awt.event.ActionEvent evt) {                                               
        HeartRates paciente = new HeartRates(textNome.getText(),textSobreNome.getText(),(Integer)spinnerDia.getValue(),
           (Integer)spinnerMes.getValue(),(Integer)spinnerAno.getValue());
        
        paciente.setIdade((Integer)spinnerAno.getValue());
        paciente.setMaxima();
        paciente.HeartRates();
        
        
    }                                              

